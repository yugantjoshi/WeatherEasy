<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background_color"
    tools:context="com.android.yugantjoshi.weathereasy.WeatherActivity">

    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_text"
        tools:text="Metuchen"
        android:textColor="#ECEFF1"
        android:textSize="40sp"
        android:layout_gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp_text"
            tools:text="67˚"
            android:textColor="#ECEFF1"
            android:textSize="80sp"
            android:layout_gravity="center_horizontal" />

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:materialIcon="weather_cloudy"
            app:materialIconSize="70dp"
            android:id="@+id/weather_icon"
            app:materialIconColor="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hilo_text"
            android:layout_margin="10dp"
            android:textSize="20dp"
            tools:text="67˚/42˚"
            android:textColor="#ECEFF1" />

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:materialIcon="water"
            app:materialIconSize="20dp"
            android:id="@+id/water_icon"
            app:materialIconColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rain_percentage"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            tools:text="3%"
            android:textColor="#ECEFF1" />

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:materialIcon="weather_windy"
            app:materialIconSize="20dp"
            android:id="@+id/wind_icon"
            app:materialIconColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wind_text"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            tools:text="3 mph"
            android:textColor="#ECEFF1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <net.steamcrafted.materialiconlib.MaterialIconView

            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:materialIcon="water_percent"
            android:layout_marginLeft="10dp"
            app:materialIconSize="20dp"
            android:id="@+id/humidity_icon"
            app:materialIconColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/humidity_text"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            tools:text="60%"
            android:textColor="#ECEFF1" />

    </LinearLayout>

</LinearLayout>
